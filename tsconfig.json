{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/[...slug].js",
    "pages/index.js",
    "**/*.js"
  ],
  "exclude": ["node_modules"],
  "paths": {
    "components/*": ["components/*"],
    "agility/*": ["agility/*"],
    "pages/*": ["pages/*"]
  }
}
